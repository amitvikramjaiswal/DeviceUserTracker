<android.support.v4.widget.SwipeRefreshLayout
    android:id="@+id/id_project_list_swipe_refresh"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/mentor_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/light_blue"
        android:clickable="true">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_project_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:horizontalSpacing="0dp"
                android:paddingBottom="@dimen/padding"
                android:stretchMode="columnWidth"
                android:verticalSpacing="@dimen/login_bottom_margin_min">

            </android.support.v7.widget.RecyclerView>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_add_new_project"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/layout_margin"
                android:elevation="@dimen/padding_left"
                android:src="@drawable/ic_add"
                app:borderWidth="0dp"/>

        </RelativeLayout>
    </RelativeLayout>
</android.support.v4.widget.SwipeRefreshLayout>